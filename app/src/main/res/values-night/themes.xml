<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DarkModeText</item>
        <item name="colorPrimaryVariant">@color/DarkModeBackGround</item>
        <item name="colorOnPrimary">@color/DarkModeBackGroundBar</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:backgroundTint">@color/DarkModeBackGround</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/ButtonStyleDark</item>
    </style>
</resources>